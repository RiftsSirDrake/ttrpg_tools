<div class="container-fluid">
  <% unless @sector.blank? %>
    <div class="pagetitle">
      <h1><%= @sector.name %> Sector</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><%= link_to "Sectors", sectors_path %></li>
          <li class="breadcrumb-item active"><%= @sector.name %></li>
        </ol>
      </nav>
    </div>

    <section class="section">
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Sector Details</h5>

              <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label fw-bold text-primary">Name</div>
                <div class="col-lg-9 col-md-8"><%= @sector.name %></div>
              </div>

              <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label fw-bold text-primary">Author</div>
                <div class="col-lg-9 col-md-8">
                  <i class="bi bi-person-circle me-1"></i> <%= @sector.author %>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label fw-bold text-primary">Public View</div>
                <div class="col-lg-9 col-md-8">
                  <% if @sector.public_view == '1' %>
                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Yes</span>
                  <% else %>
                    <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i> No</span>
                  <% end %>
                </div>
              </div>

              <div class="mt-4 pt-3 border-top">
                <div class="d-flex gap-2">
                  <% if can_edit_sector?(@sector, current_user) %>
                    <%= link_to edit_sector_path(@sector), class: 'btn btn-primary' do %>
                      <i class="bi bi-pencil"></i> Edit Sector
                    <% end %>
                  <% end %>

                  <% if @sector.author == current_user.email || current_user.admin? %>
                    <%= link_to sector_permissions_path(@sector), class: 'btn btn-info text-white' do %>
                      <i class="bi bi-shield-lock"></i> Manage Permissions
                    <% end %>
                  <% end %>

                  <%= link_to sectors_path, class: 'btn btn-secondary' do %>
                    <i class="bi bi-arrow-left"></i> Back to Sectors
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Quick Links</h5>
              <div class="list-group">
                <% if can_view_systems?(@sector, current_user) %>
                  <%= link_to systems_path(sector_id: @sector.id), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                    <div><i class="bi bi-layers me-2 text-info"></i> Systems</div>
                    <i class="bi bi-chevron-right small"></i>
                  <% end %>
                <% end %>

                <% if can_view_sector?(@sector, current_user) %>
                  <%= link_to "/hex_system/hexmap?sector_id=#{@sector.id}", class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                    <div><i class="bi bi-grid-3x3 me-2 text-info"></i> Hexmap</div>
                    <i class="bi bi-chevron-right small"></i>
                  <% end %>
                <% end %>

                <% if can_view_factions?(@sector, current_user) %>
                  <%= link_to factions_path(sector_id: @sector.id), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                    <div><i class="bi bi-people me-2 text-info"></i> Factions</div>
                    <i class="bi bi-chevron-right small"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>
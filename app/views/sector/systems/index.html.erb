<% content_for :page_title, 'Systems' %>

<div class="container-fluid">
  <div class="pagetitle">
    <h1>Systems</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to "Sectors", sectors_path %></li>
        <li class="breadcrumb-item"><%= link_to @sector.name, sector_path(@sector) %></li>
        <li class="breadcrumb-item active">Systems</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card overflow-auto">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="card-title">Systems for <%= @sector.name %></h5>
              <div class="btn-group">
                <%= link_to "/hex_system/hexmap?sector_id=#{@sector.id}", class: "btn btn-outline-info" do %>
                  <i class="bi bi-grid-3x3"></i> Hexmap
                <% end %>
                <% if can_edit_systems?(@sector, current_user) %>
                  <%= link_to new_system_path(sector_model_system: { sector_id: @sector.id }), class: 'btn btn-primary' do %>
                    <i class="bi bi-plus-circle"></i> New System
                  <% end %>
                  <%= link_to bulk_upload_systems_path(sector_id: @sector.id), class: 'btn btn-success' do %>
                    <i class="bi bi-upload"></i> Bulk Upload
                  <% end %>
                <% end %>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-center">Port</th>
                    <th scope="col" class="text-center">Size</th>
                    <th scope="col" class="text-center">Atmo</th>
                    <th scope="col" class="text-center">Hydro</th>
                    <th scope="col" class="text-center">Pop</th>
                    <th scope="col" class="text-center">Gov</th>
                    <th scope="col" class="text-center">Law</th>
                    <th scope="col" class="text-center">Tech</th>
                    <th scope="col" class="text-center">Bases</th>
                    <th scope="col">Traits</th>
                    <th scope="col" class="text-center">Advisory</th>
                    <th scope="col" class="text-center">Belts</th>
                    <th scope="col" class="text-center">Gas Giants</th>
                    <% if can_edit_systems?(@sector, current_user) %>
                      <th scope="col" class="text-end">Actions</th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% unless @systems.blank? %>
                    <% @systems.each do |details| %>
                      <tr>
                        <th scope="row">
                          <div class="d-flex align-items-center">
                            <i class="bi bi-layers fs-5 me-2 text-info"></i>
                            <%= link_to details.name, system_path(details) %>
                          </div>
                        </th>
                        <td class="text-center"><span class="badge bg-light text-dark border"><%= details.starport.split('-').first %></span></td>
                        <td class="text-center"><%= details.planet_size.split('-').first %></td>
                        <td class="text-center"><%= details.atmosphere.split('-').first %></td>
                        <td class="text-center"><%= details.hydrosphere.split('-').last %></td>
                        <td class="text-center"><%= details.population %></td>
                        <td class="text-center"><%= details.goverment.split('-').first %></td>
                        <td class="text-center"><%= details.law %></td>
                        <td class="text-center"><%= details.tech_level %></td>
                        <td class="text-center"><%= details.bases %></td>
                        <td class="small"><%= [details.notes1, details.notes2, details.notes3].reject { |n| n.blank? }.compact.join(', ') %></td>
                        <td class="text-center">
                          <% advisory_code = details.advisory.split(':').first.strip %>
                          <% badge_class = case advisory_code
                                            when 'Green' then 'bg-success'
                                            when 'Amber' then 'bg-warning'
                                            when 'Red' then 'bg-danger'
                                            else 'bg-secondary'
                                          end %>
                          <span class="badge <%= badge_class %>"><%= advisory_code %></span>
                        </td>
                        <td class="text-center"><%= details.asteroid_belts %></td>
                        <td class="text-center"><%= details.gas_giants %></td>
                        <% if can_edit_systems?(@sector, current_user) %>
                          <td class="text-end">
                            <div class="btn-group" role="group">
                              <%= link_to edit_system_path(details), class: 'btn btn-outline-secondary btn-sm', title: 'Edit' do %>
                                <i class="bi bi-pencil"></i>
                              <% end %>
                              <%= link_to system_path(id: details.id, sector_id: @sector.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm', title: 'Delete' do %>
                                <i class="bi bi-trash"></i>
                              <% end %>
                            </div>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div class="mt-3">
              <%= link_to sector_path(@sector), class: 'btn btn-secondary' do %>
                <i class="bi bi-arrow-left"></i> Back to Sector
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<div class="container-fluid">
  <div class="pagetitle">
    <h1>Bulk Upload Systems</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to "Sectors", sectors_path %></li>
        <li class="breadcrumb-item"><%= link_to @sector.name, sector_path(@sector) %></li>
        <li class="breadcrumb-item"><%= link_to "Systems", systems_path(sector_id: @sector.id) %></li>
        <li class="breadcrumb-item active">Bulk Upload</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Upload Excel File</h5>

            <%= form_with(url: process_bulk_upload_systems_path, method: :post, local: true, multipart: true, class: "row g-3") do |f| %>
              <%= f.hidden_field :sector_id, value: @sector.id %>
              
              <div class="col-12">
                <label for="file" class="form-label">System File (.xlsx)</label>
                <%= f.file_field :file, class: "form-control", accept: ".xlsx" %>
              </div>

              <div class="col-12 mt-4">
                <%= f.submit "Upload and Process", class: "btn btn-primary" %>
                <%= link_to 'Cancel', systems_path(sector_id: @sector.id), class: "btn btn-secondary" %>
              </div>
            <% end %>

            <div class="alert alert-info mt-4">
              <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>File Format Guidelines</h5>
              <p>The file should be an Excel (.xlsx) file with data starting from the first row (no headers).</p>
              <hr>
              <div class="row">
                <div class="col-md-6">
                  <ul class="mb-0">
                    <li><strong>Column A:</strong> System Name</li>
                    <li><strong>Column B:</strong> Location (e.g., 102 or 0102)</li>
                    <li><strong>Column C:</strong> UWP Code (e.g., E9A5686-1)</li>
                    <li><strong>Column D:</strong> Base Code (e.g., S, N, 2)</li>
                    <li><strong>Column E:</strong> Note 1 (e.g., Ag, Ni, etc.)</li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <ul class="mb-0">
                    <li><strong>Column F:</strong> Note 2</li>
                    <li><strong>Column G:</strong> Ring/Advisory Code (e.g., A, R)</li>
                    <li><strong>Column H:</strong> PBG Code (3-digit number)</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

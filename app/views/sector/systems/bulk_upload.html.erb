<div class="pagetitle">
  <h1>Bulk Upload Systems</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><%= link_to "Sectors", sectors_path %></li>
      <li class="breadcrumb-item"><%= link_to @sector.name, systems_path(sector_id: @sector.id) %></li>
      <li class="breadcrumb-item active">Bulk Upload</li>
    </ol>
  </nav>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Upload Excel File</h5>

          <%= form_with(url: process_bulk_upload_systems_path, method: :post, local: true, multipart: true) do |f| %>
            <%= f.hidden_field :sector_id, value: @sector.id %>
            
            <div class="row mb-3">
              <label for="file" class="col-sm-2 col-form-label">System File (.xlsx)</label>
              <div class="col-sm-10">
                <%= f.file_field :file, class: "form-control", accept: ".xlsx" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-10">
                <%= f.submit "Upload and Process", class: "btn btn-primary" %>
                <%= link_to 'Back', systems_path(sector_id: @sector.id), class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>

          <div class="alert alert-info mt-3">
            <h6>File Format Guidelines:</h6>
            <ul>
              <li>The file should be an Excel (.xlsx) file.</li>
              <li>Data should start from the first row (no headers).</li>
              <li>Column A: System Name</li>
              <li>Column B: Location (e.g., 102 or 0102)</li>
              <li>Column C: UWP Code (e.g., E9A5686-1)</li>
              <li>Column D: Base Code (e.g., S, N, 2, or leave empty)</li>
              <li>Column E: Note 1 (e.g., Ag, Ni, etc.)</li>
              <li>Column F: Note 2</li>
              <li>Column G: Ring/Advisory Code (e.g., A, R, etc.)</li>
              <li>Column H: PBG Code (3-digit number, e.g., 210)</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container-fluid">
  <div class="pagetitle">
    <h1>User Management</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">User Management</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card overflow-auto">
          <div class="card-body">
            <h5 class="card-title">Registered Users</h5>

            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>User</th>
                    <th class="text-center">Role</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <i class="bi bi-person-circle fs-4 me-2 text-primary"></i>
                          <span><%= user.email %></span>
                        </div>
                      </td>
                      <td class="text-center">
                        <% role_class = case user.role
                                          when 'admin' then 'bg-danger'
                                          when 'member' then 'bg-success'
                                          else 'bg-secondary'
                                        end %>
                        <span class="badge <%= role_class %>"><%= user.role.humanize %></span>
                      </td>
                      <td class="text-end">
                        <div class="btn-group" role="group">
                          <%= link_to admin_user_path(user), class: 'btn btn-outline-info btn-sm', title: 'Show' do %>
                            <i class="bi bi-eye"></i>
                          <% end %>
                          <%= link_to edit_admin_user_path(user), class: 'btn btn-outline-primary btn-sm', title: 'Edit' do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

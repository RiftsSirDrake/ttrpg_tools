<% unless current_user.nil? %>
  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">
  
      <div class="d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center">
          <%= image_tag "cc_icon.png" %>
          <span class="d-none d-lg-block">CosmosCreator</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div><!-- End Logo -->
  
      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
  
          <li class="nav-item dropdown pe-3">
  
            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
              <span class="d-none d-md-block dropdown-toggle ps-2">Profile</span>
            </a>
  
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
              <li class="dropdown-header">
                <h6>TBD User Email</h6>
                <span>TBD User Role</span>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
  
              <li>
                <a class="dropdown-item d-flex align-items-center" href="#">
                  <i class="bi bi-person"></i>
                  <span>My Profile</span>
                </a>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
  
              <li>
                <%= button_to destroy_user_session_path, class: "dropdown-item d-flex align-items-center", method: :delete do %>
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Sign Out</span>
                <% end %>
              </li>
  
            </ul>
          </li>
  
        </ul>
      </nav>
  
    </header>
  
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
  
      <ul class="sidebar-nav" id="sidebar-nav">
  
        <li class="nav-item">
          <a class="nav-link " href="/">
            <i class="bi bi-grid"></i>
            <span>Home</span>
          </a>
        </li>
        
        <% if current_user.admin? || current_user.member? %>
          <li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#sector-nav" data-bs-toggle="collapse" href="#">
              <i class="bi bi-menu-button-wide"></i><span>Sectors</span><i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <ul id="sector-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
              <li>
                <%= link_to sectors_path do %>
                  <i class="bi bi-circle"></i><span>Sectors List</span>
                <% end %>
              </li>
            </ul>
          </li>
        <% end %>

        <li class="nav-heading">Misc</li>
  
        <li class="nav-item">
          <a class="nav-link collapsed" href="users-profile.html">
            <i class="bi bi-person"></i>
            <span>TBD</span>
          </a>
        </li>
      </ul>
  
    </aside><!-- End Sidebar-->
<% end %>